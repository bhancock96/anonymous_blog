<ul>
  <h2>Posts</h2>
  <% @posts.each do |post| %>
      <li>
        <a href="/post/<%= post.id %>"><%= post.title %></a>
        <a class="modify" href="/post/<%= post.id %>/edit">Edit</a>
        <form action="/post/<%=post.id%>/delete" method="POST">
          <input type="submit" value="Delete">
        <form>
      </li>
    <% end %>
</ul>

<a href="/" class="back">Home</a>
